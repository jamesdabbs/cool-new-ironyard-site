extends /layouts/main
include /mixins/graduates

block meta
  +meta({
    title:"The Iron Yard | Graduates",
    description:"Graudates for hire from The Iron Yard's Academy."
  })

block content
  +navigation({
    title: 'Graduates',
    color: 'gold'
  })

  .container
    .row(style="background-color:#e3e7e9; margin-bottom:40px")
      .col-md-12
        h2.section-headline(style="margin-bottom: 10px;") Select A Location   
        .col-md-6
            h4.filter-item#atlanta • Atlanta<br>
            h4.filter-item#austin • Austin<br>
            h4.filter-item#charleston • Charleston<br>
            h4.filter-item#durham • Raleigh-Durham<br>
