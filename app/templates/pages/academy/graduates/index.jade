            h4.filter-item#greenville • Greenville<br>
            h4.filter-item#houston • Houston:<br>
            h4.filter-item#tampa • Tampa Bay:<br>
            h4.filter-item#orlando • Orlando:<br>
        .col-md-6
          h3.clear-all CLEAR ALL
        .col-md-6
          h3.show-all SHOW ALL

  include /mixins/graduates
  .container  
    .row  
      +graduates("front-end", graduates)


  script(src="//code.jquery.com/jquery-1.11.0.min.js")
  script(src="/../scripts/graduates.js")
